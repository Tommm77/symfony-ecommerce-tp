{% extends 'base.html.twig' %}

{% block title %}Brand index{% endblock %}

{% block body %}
    <h1 style="display:inline">Brand & Category Modification</h1>
    <a class="btn btn-success" href="{{ path('app_brand_new') }}">Create new Brand</a>
    <a class="btn btn-success" href="{{ path('app_brand_new') }}">Create new Category</a>
        <a class="btn btn-danger" href="/admin">Return Admin</a>
    <br>
    {% for brand in brands %}
    <div class="card-row">
        <div class="card" style"flex-direction: row">
            <div class="card text-center" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ brand.id }}</h5>
                    <p class="card-text">{{ brand.name }}</p>
                    <a class="btn btn-danger btn-sm">{{ include('brand/_delete_form.html.twig') }}</a>
                    <a class="btn btn-warning btn-lg" href="{{ path('app_brand_edit', {'id': brand.id}) }}">Edit  </a>
                </div>
            </div>
    {% endfor %}
    {% for category in categories %}
            <div class="card text-center" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ category.id }}</h5>
                    <p class="card-text">{{ category.name }}</p>
                    <a class="btn btn-danger btn-sm">{{ include('category/_delete_form.html.twig') }}</a>
                    <a class="btn btn-warning btn-lg" href="{{ path('app_category_edit', {'id': category.id}) }}">Edit  </a>
                </div>
            </div>
        </div>
    </div>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
{% endblock %}
