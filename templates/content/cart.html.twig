{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1 class="text-center">Cart</h1>
    {% for product in products %}
    <div class="row d-flex justify-content-center">
    <div class="card w-50">
  <div class="card-body">
  <img src="{{ product.product.image }}" alt="image" width="100%" height="400px">
    <h5 class="card-title">{{ product.product.name }}</h5>
    <p class="card-text">{{ product.product.price }}$</p>
    <p class="card-text">{{ product.product.price * product.quantity }}$</p>
    <select value="{{ product.quantity }}" data-id="{{ product.id }}" class="inputquantity" min="0">
    {% for i in 1..10 %}
    {% if i != product.quantity %}
    <option value="{{ i }}">{{i}}</option>
    {% else %}
    <option value="{{ i }}" selected="selected">{{i}}</option>
    {% endif %}
    {% endfor %}
    </select>
     {{ include('content/_delete_cartproduct_form.html.twig') }}
  </div>
  </div>
</div>
    {% endfor %}
{% endblock %}

{% block javascript %}
{{
  parent()
}}
<script scr="{{ asset('./cart.js') }}"></script>
{% endblock %}
