{% extends 'base.html.twig' %}

{% block title %}Hello ContentController!{% endblock %}

{% block body %}
<div class="wrapper">
		<div class="product-grid product-grid--flexbox">
			<div class="product-grid__wrapper">
				{% for product in products %}
				<div class="product-grid__product-wrapper">
					<div class="product-grid__product">
						<div class="product-grid__img-wrapper">
							<img src="{{ product.image }}" alt="Img" class="product-grid__img" />
						</div>
						<span class="product-grid__title">{{ product.name }}</span>
						<span class="product-grid__price">{{ product.price }}$</span>
						<div class="product-grid__extend-wrapper">
							<div class="product-grid__extend">
								<p class="product-grid__description"{{ product.excerpt }}</p>
								<span class="product-grid__btn product-grid__add-to-cart"><a href="{{ path('app_product_add', {'id': product.id}) }}"><i class="fa fa-cart-arrow-down"></i></a> Add to cart</span>
								<span class="product-grid__btn product-grid__add-to-fav"><i class="fa-solid fa-heart"></i> Fav</span>
								<a href="{{ path('app_product_read', {'id': product.id}) }}"><span class="product-grid__btn product-grid__view"><i class="fa fa-eye"></i> View more</span></a>
							</div>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
<div class="navigation">
    {{ knp_pagination_render(products, "content/_paginator.html.twig") }}
</div>
{% endblock %}
