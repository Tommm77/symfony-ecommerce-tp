{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="card-group">
<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Admin User Interface</h5>
    <a href="{{ path('app_user_crud_index') }}" class="btn btn-primary"><i class="fa fa-gear" aria-hidden="true"></i></a>
  </div>
</div>
<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Admin Brand & Category Interface</h5>
    <a href="{{ path('app_brand_index') }}" class="btn btn-primary"><i class="fa fa-gear" aria-hidden="true"></i></a>
  </div>
</div>
<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Admin Product Interface</h5>
    <a href="{{ path('app_products') }}" class="btn btn-primary"><i class="fa fa-gear" aria-hidden="true"></i></a>
  </div>
</div>
<div class="card text-center" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Admin Cart Interface</h5>
    <a href="{{ path('app_cart_index') }}" class="btn btn-primary"><i class="fa fa-gear" aria-hidden="true"></i></a>
  </div>
</div>
</div>
    {# <h1 style="display:inline">Product Modification</h1>
    <a class="btn btn-success" href="{{ path('app_product_create') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Excerpt</th>
                <th>Description</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>Sold</th>
                <th>Price</th>
                <th>Statut</th>
                <th>CreatedAt</th>
                <th>UpdateAt</th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.excerpt }}</td>
                <td>{{ product.description }}</td>
                <td><image src="{{ product.image }}" width="20%" height="20%"></td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.sold }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.statut }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.updateAt ? product.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td><a class="btn btn-info btn-sm" href="{{ path('app_product_read', {'id': product.id}) }}">Show</a></td>
                <td><a class="btn btn-warning btn-sm" href="{{ path('app_product_update', {'id': product.id}) }}">Edit</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <h1 style="display:inline">Brand & Category Modification</h1>
    <a class="btn btn-success" href="{{ path('app_brand_new') }}">Create new Brand</a>
    <a class="btn btn-success" href="{{ path('app_brand_new') }}">Create new Category</a>
    <br>
    {% for brand in brands %}
    <div class="card-row">
        <div class="card" style"flex-direction: row">
            <div class="card text-center" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ brand.id }}</h5>
                    <p class="card-text">{{ brand.name }}</p>
                    <a class="btn btn-danger btn-sm">{{ include('brand/_delete_form.html.twig') }}</a>
                    <a class="btn btn-warning btn-lg" href="{{ path('app_brand_edit', {'id': brand.id}) }}">Edit  </a>
                </div>
            </div>
    {% endfor %}
    {% for category in categories %}
            <div class="card text-center" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ category.id }}</h5>
                    <p class="card-text">{{ category.name }}</p>
                    <a class="btn btn-danger btn-sm">{{ include('category/_delete_form.html.twig') }}</a>
                    <a class="btn btn-warning btn-lg" href="{{ path('app_category_edit', {'id': category.id}) }}">Edit  </a>
                </div>
            </div>
        </div>
    </div>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %} #}


{% endblock %}
